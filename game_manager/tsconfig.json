{
  "compilerOptions": {
    "target": "ES2022", // Use modern JavaScript features
    "module": "ESNext", // ESM style modules
    "moduleResolution": "node", // Node-style module resolution
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allow ES module interop
    "skipLibCheck": true, // Skip library checks for faster builds
    "outDir": "dist", // Output directory for compiled files
    "rootDir": "src", // Root directory for TypeScript source
    "resolveJsonModule": true, // Allow importing JSON files
    "allowSyntheticDefaultImports": true, // Support for default imports
    "declaration": true, // Generate type declarations
    "isolatedModules": true // Ensures each file can be transpiled separately
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
